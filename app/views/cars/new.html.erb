<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form">
        <h1>Add your car</h1>
        <%= simple_form_for @car do |f|  %>
        <div class="row">
          <div class="col-xs-6">
              <%= f.input :year %>
              <%= f.input :model %>
              <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          </div>
          <div class="col-xs-6">
              <%= f.input :make %>
              <%= f.input :price %>
              <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
              <%= f.input :address %>  
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <%= f.button :submit, class: "btn-btn-primary"  %>
            </div>
        </div>
          <!-- Inject categories here -->
        <% end %>
      </div>
    </div>
  </div>
</div>

